doctype html
include ../templates/vendor/bemto/bemto

html(lang='ru')
  head
    include ../templates/partials/head/head
  body
    +b.popup-wr
      include ../templates/partials/page-popups/addbook-popup
          
    +b.page-wrapper
      +b.A.bg-link(href="#")
      include ../templates/partials/page-anchor/anchor

      +b.page-inner-wr
        include ../templates/partials/page-header/header--logged
        include ../templates/partials/page-search-toolbar/search-toolbar

        +b.page-body
          +b.page-profile
            +b(style="background-image: url(./temp/page-top-bg.png);").page-top
              +e.user-info
                +e.user-pic
                  img(src="./temp/user-pic3.png")

                +e.user-main
                  +e.user-name Света Светикова
                    +b.mobile-trigger
                  +e.user-status Эксперт

            +b.page-aside
              +e.list
                +e.item
                  a(href="#") Мой профиль
                +e.item.cookbook
                  a(href="#") Кулинарная книга
                +e.item.active
                  a(href="#") Мои рецепты
                +e.item.likes
                  a(href="#") Мне нравится
                +e.item.notifications
                  a(href="#") Уведомления
                +e.item
                  a(href="#") Выход
              +b.mobile-trigger

            +b.page-main-content
              +b.profile-section-wr
                +b.search-result
                  span Найдено: 
                  |
                  span.val 3 книги

                +b.profile-sort-toolbar
                  +e('label').search-bar.search-bar-default
                    input(type="search" placeholder="Поиск по названию книги")
                    i.icon

                  +b.sort-list
                    +b.title Сортировать:
                    +b.dropdown-list
                      select
                        option Сначала новые
                        option Сначала популярные
                        option Сначала старые

                +b.books-result-wr.book
                  +b(style="background-image: url(./temp/book-pic1.png);").item-result.item.brown
                    +b.overflow-inner
                      +b.A(href="#").overlay
                        +b.title Десерты
                      +b.item-bot
                        +b.num
                          span.val 14 
                          |
                          span рецептов
                        +b.edit
                          i
                          a(href="#") Редактировать
                        +b.remove
                          i
                          a(href="#") Удалить

                  +b.item-addbook.item-sm.item.addbook-btn
                    +b.icon
                    +b.title Создать книгу
                    +b.text Добавьте кулинарную книгу и сохраняйте в ней все самые интересные рецепты.

                  +b(style="background-image: url(./temp/book-pic2.png);").item-result.item.orange
                    +b.overflow-inner
                      +b.A(href="#").overlay
                        +b.title Подборка для пикника
                      +b.item-bot
                        +b.num
                          span.val 39
                          |
                          span рецептов
                        +b.edit
                          i
                          a(href="#") Редактировать
                        +b.remove
                          i
                          a(href="#") Удалить

                  +b.A(href="#" style="background-image: url(./temp/banner1.png);").banner.item-sm.item

                  +b(style="background-image: url(./temp/book-pic3.png);").item-result.item.green
                    +b.overflow-inner
                      +b.A(href="#").overlay
                        +b.title Лакомства для любимой тёщеньки
                      +b.item-bot
                        +b.num
                          span.val 97
                          |
                          span рецептов
                        +b.edit
                          i
                          a(href="#") Редактировать
                        +b.remove
                          i
                          a(href="#") Удалить




        include ../templates/partials/page-footer/footer

  block scripts
    script(src='assets/scripts/vendor/jquery-2.2.4.min.js')
    script(src='assets/scripts/tools.js')
    script(src='assets/scripts/vendor/slick.min.js')
    script(src='assets/scripts/vendor/selectize.min.js')
    script(src='assets/scripts/vendor/jquery-ui.min.js')